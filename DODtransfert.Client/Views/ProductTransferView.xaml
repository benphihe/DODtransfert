<UserControl x:Class="DODtransfert.Client.Views.ProductTransferView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Ajout de produits" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Destinataires -->
            <GroupBox Grid.Column="0" Header="Destinataires" Margin="0,0,10,0">
                <ListBox ItemsSource="{Binding AvailableUsers}"
                         SelectedItem="{Binding SelectedUser}"
                         DisplayMemberPath="Name">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </GroupBox>

            <!-- Formulaire produit -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Informations produit -->
                    <GroupBox Header="Informations produit" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Nom de la marque *" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding BrandName, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding BrandValidationMessage}" 
                                       Foreground="Red" Margin="0,0,0,10"
                                       Visibility="{Binding BrandValidationMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                            <TextBlock Text="Nom du produit *" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="{Binding ProductValidationMessage}" 
                                       Foreground="Red" Margin="0,10,0,0"
                                       Visibility="{Binding ProductValidationMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Photos -->
                    <GroupBox Header="Photos *" Margin="0,0,0,10">
                        <StackPanel>
                            <Button Content="Ajouter des photos" 
                                    Command="{Binding SelectPhotosCommand}"
                                    Margin="0,0,0,10" Padding="10,5"/>
                            <TextBlock Text="{Binding PhotoValidationMessage}" 
                                       Foreground="Red" Margin="0,0,0,10"
                                       Visibility="{Binding PhotoValidationMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                            <ListBox ItemsSource="{Binding SelectedPhotos}" MaxHeight="150">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding FileName}"/>
                                            <Button Grid.Column="1" Content="✕" 
                                                    Command="{Binding DataContext.RemovePhotoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="30" Margin="5,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </GroupBox>

                    <!-- PDFs -->
                    <GroupBox Header="PDFs *" Margin="0,0,0,10">
                        <StackPanel>
                            <Button Content="Ajouter des PDFs" 
                                    Command="{Binding SelectPdfsCommand}"
                                    Margin="0,0,0,10" Padding="10,5"/>
                            <TextBlock Text="{Binding PdfValidationMessage}" 
                                       Foreground="Red" Margin="0,0,0,10"
                                       Visibility="{Binding PdfValidationMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                            <ListBox ItemsSource="{Binding SelectedPdfs}" MaxHeight="150">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding FileName}"/>
                                            <Button Grid.Column="1" Content="✕" 
                                                    Command="{Binding DataContext.RemovePdfCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="30" Margin="5,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Status et Actions -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center" Foreground="Gray"/>

            <Button Grid.Column="1" Content="Envoyer le produit" 
                    Command="{Binding SendProductTransferCommand}"
                    IsEnabled="{Binding CanSend}"
                    Padding="20,10" FontSize="14" FontWeight="Bold"/>
        </Grid>
    </Grid>
</UserControl>
