<Window x:Class="DODtransfert.Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DODtransfert.Client.Views"
        xmlns:ViewModels="clr-namespace:DODtransfert.Client.ViewModels"
        mc:Ignorable="d"
        Title="DOD Transfert" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu de navigation -->
        <Menu Grid.Row="0" Background="#F0F0F0">
            <MenuItem Header="Transfert" Command="{Binding NavigateToTransferCommand}"/>
            <MenuItem Header="Ajout de produits" Command="{Binding NavigateToProductTransferCommand}"/>
        </Menu>

        <!-- Zone de contenu -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type ViewModels:LoginViewModel}">
                    <views:LoginView DataContext="{Binding}"/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type ViewModels:TransferViewModel}">
                    <views:TransferView DataContext="{Binding}"/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type ViewModels:ProductTransferViewModel}">
                    <views:ProductTransferView DataContext="{Binding}"/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>

        <!-- Barre de statut -->
        <Grid Grid.Row="2" Background="#F0F0F0" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center" Margin="10,0"
                       Foreground="Gray"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0">
                <TextBlock Text="IP serveur:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Text="{Binding ServerIp, UpdateSourceTrigger=PropertyChanged}" 
                         Width="120" Margin="0,0,5,0" Padding="5,2"/>
                <Button Content="Démarrer serveur" 
                        Command="{Binding StartServerCommand}"
                        IsEnabled="{Binding IsServerMode, Converter={StaticResource InverseBooleanConverter}}"
                        Margin="0,0,5,0" Padding="10,5"/>
                <Button Content="Arrêter serveur" 
                        Command="{Binding StopServerCommand}"
                        IsEnabled="{Binding IsServerMode}"
                        Margin="0,0,5,0" Padding="10,5"/>
                <Button Content="Se connecter" 
                        Command="{Binding ConnectToServerCommand}"
                        Padding="10,5"/>
                <TextBlock Text="{Binding LocalIp, StringFormat='IP locale: {0}'}" 
                           VerticalAlignment="Center" Margin="10,0,0,0" 
                           Foreground="Gray" FontSize="10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
