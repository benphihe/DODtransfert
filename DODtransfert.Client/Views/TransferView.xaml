<UserControl x:Class="DODtransfert.Client.Views.TransferView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Transfert de fichiers" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Destinataires -->
            <GroupBox Grid.Column="0" Header="Destinataires" Margin="0,0,10,0">
                <ListBox ItemsSource="{Binding AvailableUsers}"
                         SelectedItem="{Binding SelectedUser}"
                         DisplayMemberPath="Name">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </GroupBox>

            <!-- Fichiers -->
            <GroupBox Grid.Column="1" Header="Fichiers sélectionnés">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Content="Sélectionner des fichiers" 
                            Command="{Binding SelectFilesCommand}"
                            Margin="0,0,0,10" Padding="10,5"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding SelectedFiles}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding FileName}"/>
                                    <Button Grid.Column="1" Content="✕" 
                                            Command="{Binding DataContext.RemoveFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Width="30" Margin="5,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Status et Actions -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center" Foreground="Gray"/>

            <Button Grid.Column="1" Content="Envoyer" 
                    Command="{Binding SendTransferCommand}"
                    IsEnabled="{Binding IsSending, Converter={StaticResource InverseBooleanConverter}}"
                    Padding="20,10" FontSize="14" FontWeight="Bold"/>
        </Grid>
    </Grid>
</UserControl>
